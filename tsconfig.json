{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rewriteRelativeImportExtensions": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }